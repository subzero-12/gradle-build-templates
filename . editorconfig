# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Newlines with a newline ending every file and remove trailing whitespace
[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2

[*.java]
indent_size = 4
